{
  "name": "backend-core",
  "private": "true",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "scripts": {
    "migrate": "prisma migrate dev",
    "seed:hard": "prisma migrate reset",
    "seed:soft": "prisma db seed",
    "migrate:prod": "prisma migrate deploy",
    "lint:js": "eslint \"src/**/*.ts\" --max-warnings=0",
    "lint": "npm run lint:js",
    "start:dev": "nodemon --exec ts-node --files -r tsconfig-paths/register ./src/server.ts",
    "postinstall": "prisma generate",
    "prestart": "npm run migrate:prod && npm run seed:soft",
    "start": "node ./build/server.js",
    "build:ts": "tsc && tsc-alias -p tsconfig.json",
    "build": "npm run build:ts && node ./build/build.js",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/integration/**/*.spec.ts'"
  },
  "devDependencies": {
    "@faker-js/faker": "7.3.0",
    "@types/amqplib": "0.8.2",
    "@types/bcrypt": "5.0.0",
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.3",
    "@types/cors": "2.8.12",
    "@types/email-templates": "10.0.0",
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.1",
    "@types/node": "18.6.2",
    "@types/nodemailer": "6.4.5",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@types/uuid": "8.3.4",
    "nodemon": "2.0.19",
    "pino-pretty": "8.1.0",
    "prisma": "4.1.1",
    "ts-node": "10.9.1",
    "tsc-alias": "1.6.11",
    "tsconfig-paths": "3.14.1"
  },
  "dependencies": {
    "@prisma/client": "4.1.1",
    "amqplib": "0.10.2",
    "axios": "^0.27.2",
    "bcrypt": "5.0.1",
    "body-parser": "1.20.0",
    "chai": "4.3.6",
    "cloudinary": "1.30.1",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "email-templates": "10.0.1",
    "fs-extra": "10.1.0",
    "glob": "8.0.3",
    "googleapis": "105.0.0",
    "helmet": "5.1.1",
    "inversify": "6.0.1",
    "inversify-express-utils": "6.4.3",
    "jose": "4.8.3",
    "mocha": "10.0.0",
    "nodemailer": "6.7.7",
    "pino-http": "8.2.0",
    "pug": "3.0.2",
    "reflect-metadata": "0.1.13",
    "swagger-jsdoc": "6.2.5",
    "swagger-ui-express": "4.5.0",
    "uuid": "8.3.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
