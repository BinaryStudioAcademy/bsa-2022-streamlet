# IN GENERAL, REFER to api.env.example, but set NODE_ENV to development

#
# APPLICATION
#
API_BASE_PREFIX=/api/v1
NODE_ENV=development
HOST=localhost
RABBITMQ_HOST=rabbit
PORT=5001
RABBITMQ_PORT=5672

#
# DATABASE
#
DATABASE_URL="postgresql://postgres:...@api-db:5432/streamlet?schema=public"

#
# CLOUD
#
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...
CLOUDINARY_NAME=...

#
# MAIL SERVICE
#
MAIL_LOGIN=...
MAIL_PASSWORD=...

#
# Google Identity Service
#
GOOGLE_CLIENT_ID_GSI=...
GOOGLE_SECRET_GSI=...

#
# ENCRYPTION
#
# 512 bit string
# https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
ACCESS_TOKEN_SECRET=...
REFRESH_SECRET=...
RESET_PASSWORD_TOKEN_SECRET=...
VERIFICATION_TOKEN_SECRET=...

#
# CLIENT INFO
#
CLIENT_URL="https://dev.streamlet.tk"
