{
  "name": "bsa-2022-streamlet",
  "private": "true",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "scripts": {
    "lint:fs": "ls-lint",
    "lint:css": "npm run lint:css --workspaces --if-present",
    "lint:js": "npm run lint:js --workspaces --if-present",
    "lint": "npm run lint:fs && npm run lint --workspaces --if-present",
    "postinstall": "npm run build:shared && npm run postinstall -w backend",
    "build:shared": "npm run build -w shared",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "build": "npm run build -w shared -w frontend -w backend",
    "docker:build:backend": "docker build -f .docker/backend.Dockerfile -t backend .",
    "docker:build:frontend": "docker build --build-arg REACT_APP_API_ORIGIN_URL=/api/v1 -f .docker/frontend.Dockerfile -t frontend .",
    "docker:build": "npm run docker:build:backend && npm run docker:build:frontend",
    "docker:up:d": "docker-compose -f .docker/docker-compose.local.yml up -d",
    "docker:up:debug": "docker-compose -f .docker/docker-compose.local.yml up -d api-db rabbitmq",
    "docker:up": "docker-compose -f .docker/docker-compose.local.yml up",
    "migrate": "npm run migrate -w backend",
    "start:frontend": "npm start -w frontend",
    "start:backend": "npm run start:dev -w backend"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "1.11.2",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "eslint": "8.19.0",
    "eslint-plugin-import": "2.26.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "simple-git-hooks": "2.8.0",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.7.4"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint:fs",
    "*.{ts,tsx,json}": "prettier --write",
    "{shared,backend,frontend}/**/*.{ts,tsx}": "npm run lint:js",
    "frontend/**/*.scss": "npm run lint:css"
  }
}
